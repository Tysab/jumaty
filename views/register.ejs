<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Registreren</title>
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Bootstrap core CSS -->
  <link href="css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="css/mdb.min.css" rel="stylesheet">
  <!-- Your custom styles (optional) -->
  <link href="css/style.css" rel="stylesheet">
  <style type="text/css">
    html,
    body,
    header,
    .view {
      height: 100%;
    }

    @media (max-width: 740px) {

      html,
      body,
      header,
      .view {
        height: 1000px;
      }
    }

    @media (min-width: 800px) and (max-width: 850px) {

      html,
      body,
      header,
      .view {
        height: 650px;
      }
    }

    @media (min-width: 800px) and (max-width: 850px) {
      .navbar:not(.top-nav-collapse) {
        background: #1C2331 !important;
      }
    }
  </style>
</head>

<% if(typeof message !== 'undefined' && message !== null) {%>

<body onload="toastr.warning('<%= message %>');">
  <% } else { %>

  <body>
    <% } %>


    <!-- Full Page Intro -->
    <div class="view full-page-intro">

      <!-- Mask & flexbox options-->
      <div class="mask rgba-black-light d-flex justify-content-center align-items-center">

        <!-- Content -->
        <div class="container">

          <!--Grid row-->
          <div class="row wow fadeIn">

            <!--Grid column-->
            <div class="col-md-6 mb-4 white-text text-center text-md-left">

              <div class="text-nowrap d-flex justify-content-center">
                <img src="img/logonotext.png" alt="logo" width="100">
                <span class="display-4 font-weight-bold ml-3 mb-0 pt-3 align-bottom">Jumaty</span>
              </div>

              <hr class="hr-light">

              <p class="text-center">
                <strong>In ullamco esse reprehenderit veniam id nisi et enim amet excepteur aliqua irure. Fugiat qui
                  esse
                  ipsum veniam est. Aute ea do laboris exercitation eu.</strong>
              </p>

            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-md-6 col-xl-5 mb-4">

              <!--Card-->
              <div class="card">

                <!--Card content-->
                <div class="card-body">

                  <!-- Form -->
                  <form action="/register" method="POST">
                    <!-- Heading -->
                    <h3 class="dark-grey-text text-center">
                      <strong>Meld je aan</strong>
                    </h3>
                    <hr>

                    <div class="md-form">
                      <i class="fas fa-envelope prefix grey-text"></i>
                      <input type="text" name="voornaam" placeholder="Voornaam" class="form-control">

                    </div>

                    <div class="md-form">
                      <i class="fas fa-key prefix grey-text"></i>
                      <input type="text" name="achternaam" placeholder="Achternaam" class="form-control">

                    </div>

                    <div class="md-form">
                      <i class="fas fa-key prefix grey-text"></i>
                      <input type="text" name="email" placeholder="E-Mail" class="form-control">

                    </div>

                    <div class="md-form">
                      <i class="fas fa-key prefix grey-text"></i>
                      <input type="text" name="wachtwoord" placeholder="Wachtwoord" class="form-control">

                    </div>

                    <div class="text-center">
                      <input type="submit" class="btn btn-custom-color" value="Meld je aan">
                    </div>

                  </form>
                  <!-- Form -->

                  <hr>

                  <div class="text-center">Heb je al een account? <br>
                    <a href="/login" style="color:#A91010" class="font-weight-bold">Log in</a>
                  </div>

                </div>

              </div>
              <!--/.Card-->

            </div>
            <!--Grid column-->

          </div>
          <!--Grid row-->

        </div>
        <!-- Content -->

      </div>
      <!-- Mask & flexbox options-->

    </div>
    <!-- Full Page Intro -->



    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script type="text/javascript" src="js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="js/mdb.min.js"></script>
    <!-- Initializations -->
    <script type="text/javascript">
      // Animations initialization
      new WOW().init();
    </script>
  </body>

</html>