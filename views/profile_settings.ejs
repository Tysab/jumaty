<div class="container h-100 d-flex justify-content-center align-items-center">

  <!--Grid row-->
  <div class="row w-100 pt-5 mt-3 mb-5">

    <!--Grid column-->
    <div class="col-md-12">

      <div class="card">
        <div class="card-body">

          <h2 class="font-weight-bold my-4 text-center mb-5 mt-4 font-weight-bold">
            <strong>Profiel Bewerken</strong>
          </h2>
          <hr>

          <!-- form -->
          <form action="/profile/settings" method="POST" enctype="multipart/form-data">

            <!--Grid row-->
            <div class="row mt-5">

              <!--Grid column-->
              <div class="col-md-6 ml-lg-5 ml-md-3">

                <div class="md-form">
                  <div class="file-field">
                    <div class="d-flex mb-4 align-items-center justify-content-center">
                      <img src="<%= data.user.img_data %>"
                        class="rounded-circle z-depth-1-half avatar-pic" alt="example placeholder avatar">
                    </div>
                    <div class="d-flex justify-content-center">
                      <div class="btn btn-mdb-color btn-rounded float-left">
                        <span>Add photo</span>
                        <input type="file" name="user_avatar" accept="image/*">
                      </div>
                    </div>
                  </div>
                </div>

                <hr>

                <!--Grid row-->
                <div class="row pb-4">
                  <div class="col-2 col-lg-1">
                    <i class="fas fa-pencil-alt prefix"></i>
                  </div>
                  <div class="col-10">
                    <h4 class="font-weight-bold mb-4">
                      <strong>Biografie</strong>
                    </h4>
                    <div class="md-form">
                      <textarea id="form10" class="md-textarea form-control" rows="3"  value="<%= data.user.biografie %>"
                        placeholder="Je hebt nog geen bio..."></textarea>
                    </div>
                  </div>
                </div>
                <!--Grid row-->

              </div>
              <!--Grid column-->

              <!--Grid column-->
              <div class="col-md-5">

                <!--Body-->

                <h4 class="font-weight-bold mb-4 text-center">
                  <strong>Persoonlijke gegevens</strong>
                </h4>

                <div class="md-form">
                  <i class="fas fa-user prefix" style="color:#212529;"></i>
                  <input type="text" name="voornaam" class="form-control" placeholder="Voornaam" value="<%= data.user.voornaam %>">
                </div>
                <div class="md-form">
                  <i class="fas fa-user-tie prefix" style="color:#212529;"></i>
                  <input type="text" name="achternaam" class="form-control" placeholder="Achternaam" value="<%= data.user.achternaam %>">
                </div>

                <div class="md-form">
                  <i class="fas fa-envelope prefix" style="color:#212529;"></i>
                  <input type="email" name="email" class="form-control" placeholder="E-Mail" value="<%= data.user.email %>">
                </div>

                <hr>

                <h4 class="font-weight-bold mb-4 text-center">
                  <strong>Wachtwoord</strong>
                </h4>

                <div class="md-form">
                  <i class="fas fa-key prefix" style="color:#212529;"></i>
                  <input type="password" name="wachtwoord"  placeholder="Wachtwoord"class="form-control">
                </div>

                <div class="md-form">
                  <i class="fas fa-lock prefix" style="color:#212529;"></i>
                  <input type="password" name="wachtwoord_herhalen" placeholder="Wachtwoord herhalen" class="form-control">
                </div>

                <div class="text-center">
                  <button class="btn btn-indigo btn-rounded mt-5" type="submit">Wijzigen</button>
                </div>

              </div>
              <!--Grid column-->

            </div>
            <!--Grid row-->

            <!-- /form -->
          </form>

        </div>
      </div>

    </div>
    <!--Grid column-->

  </div>
  <!--Grid row-->

</div>