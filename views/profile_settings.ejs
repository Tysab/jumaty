<div class="container h-100 d-flex justify-content-center align-items-center">

  <!--Grid row-->
  <div class="row w-100 pt-5 mt-3 mb-5">

    <!--Grid column-->
    <div class="col-md-12">

      <div class="card">
        <div class="card-body">

          <h2 class="font-weight-bold my-4 text-center mb-5 mt-4 font-weight-bold">
            <strong>Profiel Bewerken</strong>
          </h2>
          <hr>

          <!-- form
          <form action="/profile/settings" method="POST" enctype="multipart/form-data"> -->

          <!--Grid row-->
          <div class="row mt-5">

            <!--Grid column-->
            <div class="col-md-6 ml-lg-5 ml-md-3">

              <!-- form -->
              <form action="/profile/settings/avatar" method="POST" enctype="multipart/form-data">
                <span class="md-form">
                  <div class="d-flex mb-4 align-items-center justify-content-center">
                    <img src="<%= data.user.img_data %>" class="rounded-circle z-depth-1-half avatar-pic"
                      alt="example placeholder avatar">
                  </div>
                  <div class="file-field">
                    <div class="btn btn-primary btn-sm float-left">
                      <span>Foto kiezen</span>
                      <input type="file" name="user_avatar">
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm float-right input-group-prepend">Upload</button>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text" placeholder="">
                    </div>
                  </div>
              </form>
              <!-- /form -->

              <hr>

              <!-- form -->
              <form action="/profile/settings/bio" method="POST" enctype="multipart/form-data">

                <!--Grid row-->
                <div class="row pb-4">
                  <div class="col-2 col-lg-1">
                    <i class="fas fa-pencil-alt prefix"></i>
                  </div>
                  <div class="col-10">
                    <h4 class="font-weight-bold">
                      <strong>Biografie</strong>
                    </h4>
                    <div class="md-form">
                      <textarea id="form10" class="md-textarea form-control" rows="3" name="biografie"
                        placeholder="Je hebt nog geen bio..."><%= data.user.biografie %></textarea>
                    </div>
                    <div class="text-center">
                      <button class="btn btn-indigo btn-rounded" type="submit">Wijzigen</button>
                    </div>
                  </div>
                </div>
                <!--Grid row-->

              </form>
              <!-- /form -->

            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-md-5">

              <!--Body-->

              <!-- form -->
              <form action="/profile/settings/userinfo" method="POST" enctype="multipart/form-data">

                <h4 class="font-weight-bold mb-4 text-center">
                  <strong>Persoonlijke gegevens</strong>
                </h4>

                <div class="md-form">
                  <i class="fas fa-user prefix" style="color:#212529;"></i>
                  <input type="text" name="voornaam" class="form-control" placeholder="Voornaam"
                    value="<%= data.user.voornaam %>">
                </div>
                <div class="md-form">
                  <i class="fas fa-user-tie prefix" style="color:#212529;"></i>
                  <input type="text" name="achternaam" class="form-control" placeholder="Achternaam"
                    value="<%= data.user.achternaam %>">
                </div>

                <div class="md-form">
                  <i class="fas fa-envelope prefix" style="color:#212529;"></i>
                  <input type="email" name="email" class="form-control" placeholder="E-Mail"
                    value="<%= data.user.email %>">
                </div>

                <div class="text-center">
                  <button class="btn btn-indigo btn-rounded" type="submit">Wijzigen</button>
                </div>

              </form>
              <!-- /form -->

                <hr>

                <!-- form -->
                <form action="/profile/settings/password" method="POST" enctype="multipart/form-data">

                  <h4 class="font-weight-bold mb-4 text-center">
                    <strong>Wachtwoord</strong>
                  </h4>

                  <div class="md-form">
                    <i class="fas fa-key prefix" style="color:#212529;"></i>
                    <input type="password" name="wachtwoord" placeholder="Wachtwoord" class="form-control">
                  </div>

                  <div class="md-form">
                    <i class="fas fa-lock prefix" style="color:#212529;"></i>
                    <input type="password" name="wachtwoord_herhalen" placeholder="Wachtwoord herhalen"
                      class="form-control">
                  </div>

                  <div class="text-center">
                    <button class="btn btn-indigo btn-rounded" type="submit">Wijzigen</button>
                  </div>

                </form>
                <!-- /form -->

            </div>
            <!--Grid column-->

          </div>
          <!--Grid row-->

        </div>
      </div>

    </div>
    <!--Grid column-->

  </div>
  <!--Grid row-->

</div>